---
import SocialIcons from './SocialIcons.astro';
const { name, tagline, twitter, linkedin, scholar, email } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <div class="portrait-container">
      <img src="/images/portrait.jpg" alt={name} class="portrait" />
    </div>
    <div class="hero-text">
      <h1>{name}</h1>
      <p class="tagline">{tagline}</p>
      <SocialIcons 
        size={40}
        gap=1.5
        twitter={twitter} 
        linkedin={linkedin} 
        scholar={scholar} 
        email={email} 
      />
    </div>
  </div>
</section>
